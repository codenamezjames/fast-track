# Fast Track v2 Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# ======================
# PostgreSQL Configuration
# ======================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=fast_track

# ======================
# Redis Configuration
# ======================
REDIS_PASSWORD=

# ======================
# AdonisJS Configuration
# ======================
# Generate APP_KEY with: docker compose -f docker-compose.prod.yml run --rm api node ace generate:key
APP_KEY=your-app-key-here

PORT=3000
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info
SESSION_DRIVER=cookie

# ======================
# Database (for AdonisJS)
# ======================
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=change-this-secure-password
DB_DATABASE=fast_track

# ======================
# Redis (for AdonisJS)
# ======================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# CORS Configuration
# ======================
CORS_ORIGIN=https://ft.theflyingdutchman.online

# ======================
# VAPID (Web Push Notifications)
# ======================
# Generate VAPID keys with: npx web-push generate-vapid-keys
VAPID_SUBJECT=mailto:your-email@example.com
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# ======================
# Frontend Build Arguments
# ======================
VITE_API_URL=https://api-ft.theflyingdutchman.online/api
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key-here
